generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  userID     Int        @id @default(autoincrement())
  username   String     @unique
  email      String     @unique
  password   String
  role       UserRole   @default(SUPPLIER)
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  Orders     Orders[]   
  Products   Products[] 
}

model Products {
  productID   Int              @id @default(autoincrement())
  name        String
  description String
  price       Float
  stock       Int
  category    ShoePartCategory 
  unit        UnitType         
  material    String           
  userID      Int              
  created_at  DateTime         @default(now())
  updated_at  DateTime         @updatedAt
  supplier    Users            @relation(fields: [userID], references: [userID])
  Orders      Orders[]         

  @@index([userID])
}

model Orders {
  orderID    Int        @id @default(autoincrement())
  userID     Int        
  productID  Int        
  quantity   Int
  status     StatusRole @default(PENDING)
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  user       Users      @relation(fields: [userID], references: [userID])
  product    Products   @relation(fields: [productID], references: [productID])
  qr_code    String?    

  @@index([userID])
  @@index([productID])
}

enum UserRole {
  STAKEHOLDER
  SUPPLIER
}

enum StatusRole {
  PENDING
  ON_PROGRESS
  SUCCESS
  REJECT
}

enum ShoePartCategory {
  UPPER       // Bagian atas sepatu
  SOLE        // Sol sepatu
  INSOLE      // Bagian dalam sepatu
  SHOELACES   // Tali sepatu
  HEEL        // Hak sepatu
  TONGUE      // Lidah sepatu
  EYELETS     // Lubang tali
  TOE_CAP     // Ujung sepatu
  QUARTER     // Bagian samping
  LINING      // Lapisan dalam
  PADDING     // Bantalan
}

enum UnitType {
  METER       // Untuk material yang dijual per meter (kulit, tekstil)
  KG          // Untuk material yang dijual per berat (lem, bahan kimia)
  PCS         // Untuk komponen yang dijual per piece (eyelet, sol)
  ROLL        // Untuk material dalam bentuk roll (benang)
  PACK        // Untuk item yang dijual per pack
}
